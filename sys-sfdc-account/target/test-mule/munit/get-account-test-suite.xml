<?xml version="1.0" encoding="UTF-8"?>

<mule xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:munit="http://www.mulesoft.org/schema/mule/munit" xmlns:munit-tools="http://www.mulesoft.org/schema/mule/munit-tools"
	xmlns="http://www.mulesoft.org/schema/mule/core" xmlns:doc="http://www.mulesoft.org/schema/mule/documentation"
	xsi:schemaLocation="
		http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd
		http://www.mulesoft.org/schema/mule/munit http://www.mulesoft.org/schema/mule/munit/current/mule-munit.xsd
		http://www.mulesoft.org/schema/mule/munit-tools  http://www.mulesoft.org/schema/mule/munit-tools/current/mule-munit-tools.xsd">
	<munit:config name="sys-sfdc-test-suite.xml" >
		<munit:parameterizations file="getaccount\get-account.yaml" />
	</munit:config>
	<munit:test name="getaccount-test-suite" doc:id="32e02761-bbe7-4c11-b500-fa896873c55f" >
		<munit:behavior >
			<munit-tools:mock-when doc:name="Mock when" doc:id="bf21fea3-06ea-482b-aced-c33c18214a65" processor="salesforce:query">
				<munit-tools:with-attributes >
					<munit-tools:with-attribute whereValue="429dfb25-df3c-4e5d-ace7-ca041a70fb6e" attributeName="doc:id" />
				</munit-tools:with-attributes>
				<munit-tools:then-return >
					<munit-tools:payload value='#[output application/json --- readUrl("classpath://getaccount/get-account-response.json")] ' mediaType="application/json" encoding="UTF-8" />
					<munit-tools:error typeId="${errorType}" />
				</munit-tools:then-return>
			</munit-tools:mock-when>
			<munit:set-event doc:name="Set Event" doc:id="63b32e79-cbe4-4e7d-b9bd-32a27ac38737" >
				<munit:attributes value='#[output application/json --- readUrl("classpath://getaccount/get-accounts-attributes.json")] ' encoding="UTF-8" mediaType="application/json" />
			</munit:set-event>
		</munit:behavior>
		<munit:execution >
			<flow-ref doc:name="get:\account:api-account-config" doc:id="4cf27cb8-652a-429b-9e6c-146f4ac8c5d7" name="get:\account:api-account-config"/>
		</munit:execution>
		<munit:validation >
			<munit-tools:verify-call doc:name="Verify call" doc:id="26d4c38e-c274-4ae2-bda1-3ab2a9805073" processor="salesforce:query" times="${sfdcQueryCalls}">
				<munit-tools:with-attributes >
					<munit-tools:with-attribute whereValue="429dfb25-df3c-4e5d-ace7-ca041a70fb6e" attributeName="doc:id" />
				</munit-tools:with-attributes>
			</munit-tools:verify-call>
		</munit:validation>
	</munit:test>


</mule>
